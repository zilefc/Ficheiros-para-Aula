void setup()
{
  // initialize with the I2C addr 0x3C
  oled.begin(SSD1306_SWITCHCAPVCC, 0x3C);
  oled.clearDisplay();
  oled.drawBitmap(0, 0,  machel, 128, 64, WHITE);
  oled.display();
  delay(2000);
}
void loop() {
  oled.clearDisplay();
  oled.setTextSize(1);
  oled.setTextColor(WHITE);
  oled.setCursor(0, 0);
  oled.println("Samora Machel");
  oled.println("A luta continua!");
  oled.println("Mocambique");
  oled.display();
  delay(1000);
  oled.startscrollright(0x00, 0x07);
  delay(2000);
  oled.stopscroll();
  delay(1000);
  oled.startscrollleft(0x00, 0x07);
  delay(2000);
  oled.stopscroll();
  delay(1000);
  oled.startscrolldiagright(0x00, 0x07);
  delay(2000);
  oled.startscrolldiagleft(0x00, 0x07);
  delay(2000);
  oled.stopscroll();
}
